#me-sims
  display: flex
  width: 100vw
  min-height: 100vh
  background-image: url("/assets/img/back.jpg")
  background-position: center
  background-size: cover

  &>*:not(footer)
    flex: auto
    min-width: 33.33333%

  #tracos
    display: table

    &>img
      max-width: 290px
      margin: 60px 0 0 20px

    #name-box
      display: flex
      align-items: flex-start
      width: 100%
      background: white
      border-radius: 0 0 100px 0

      img
        max-width: 90px
        padding: 5px 15px 0 5px
        margin-bottom: -35px

      input
        font-size: 28px
        flex: auto
        padding: 4px 0
        color: #4f6c86
        border-radius: 0 0 100px 0



  #info-vitor
    display: table

    &>div
      display: flex
      flex-direction: column
      max-width: 350px
      margin: 0 10px 0 auto
      max-height: calc(100vh - 40px)
      padding: 0 10px
      overflow-y: auto

      h1
        display: table
        max-width 250px
        margin: 40px auto 10px

      &>div
        width: 100%
        margin-top: 20px
        background-color: rgba(255,255,255,0.3)
        display: table
        border-radius: 10px

        &>span
          display: flex
          justify-content: space-between
          padding: 0 10px

          i
            padding: 20px
            font-size: 32px
            color: #394963
            opacity: 0.8

            &:hover, &.active
              cursor pointer
              background-color: rgba(255,255,255,0.3)
              border-radius: 0 0 50px 50px

        &>div
          background-color: rgba(255,255,255,0.3)
          margin: 10px
          padding: 10px

  footer
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    border-bottom: solid 20px #88B5C4
    display: flex
    justify-content: space-between
    align-items: flex-end

    #full-vitor
      line-height: 0
      max-width: 80px
      margin-bottom: -20px
      margin-left: 10px
      overflow: hidden
      background-image: linear-gradient(to top, #389422, transparent)

    #menu
      display: table;
      background: #88b5c4;
      border-radius: 40px 40px 0 0;
      padding: 10px 40px;
      color: #fff;
      text-shadow: 1px 1px #566d78;
      line-height: 1em;
      position: absolute;
      left: 50%;
      transform: translate(-50%, 10px);

      a
        display: inline-table
        line-height: 1em
        font-size: 35px
        padding: 0 10px
        transition: .2s

        &:hover
          transform: scale(1.2)



#me-sims
  display: flex
  width: 100vw
  min-height: 100vh
  background-image: url("/assets/img/back.jpg")
  background-position: center
  background-size: cover

  &>div:not(footer)
    flex: auto
    min-width: 33.33333%

  #tracos
    display: table

    &>img
      max-width: 320px
      margin: 60px 0 0 20px

    #name-box
      display: flex
      width: 100%
      background: white
      border-radius: 0 0 100px 0

      img
        max-width: 100px
        padding: 5px 15px 0 5px
        margin-bottom: -35px

      input
        font-size: 32px
        flex: auto
        padding: 4px 0
        color: #4f6c86
        border-radius: 0 0 100px 0

  #main-face
    display: flex
    align-items center
    justify-content center
    position: relative
    line-height: 0
    display: table
    &>i
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
    &>img
      max-height: 100vh
      max-width: 100vw
      height: auto
      width: auto
      display: table
      margin: 0 auto

  #info-vitor
    display: table

    h1
      display: table
      max-width 250px
      margin: 40px auto 10px

  footer
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    border-bottom: solid 20px #88B5C4
    display: flex
    justify-content: space-between
    align-items: flex-end

    #full-vitor
      line-height: 0
      max-width: 80px
      margin-bottom: -20px
      margin-left: 10px
      overflow: hidden
      background-image: linear-gradient(to top, #389422, transparent)

    #menu
      display: table
      margin: 0 auto -10px
      background:#88B5C4
      border-radius: 40px 40px 0 0
      padding: 10px 40px
      color: white
      text-shadow: 1px 1px #566d78
      line-height: 1em

      a
        display: inline-table
        line-height: 1em
        font-size: 35px
        padding: 0 10px
        transition: .2s

        &:hover
          transform: scale(1.2)

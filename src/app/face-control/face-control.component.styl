.face-part
  position: absolute
  display: table
  transform: translate(0, 0) scaleX(1) scaleY(1) rotate(0deg);

#main-face
  display: flex
  align-items center
  justify-content center
  position: relative
  line-height: 0
  display: table
  &>i
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
  &>img
    max-height: 100vh
    max-width: 100vw
    height: auto
    width: auto
    display: table
    margin: 0 auto

  #botoes
    position: absolute
    top: 50%
    right: 0
    transform: translate(0, -50%)
    display: flex
    flex-direction: column

    button
      display: flex
      align-items: center
      justify-content: center
      width: 50px
      height: 50px
      margin: 10px 0
      background: rgba(255,255,255,.5)
      border-radius: 50%
      transition: .5s
      cursor: pointer

      &:hover
        transform: scale(1.2)
        background: rgba(255,255,255,.8)


      img
        width: auto
        height: auto
        max-width: 80%
        max-height: 80%

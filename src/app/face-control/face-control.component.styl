.face-part
  position: absolute
  display: table
  transform: translate(0, 0) scaleX(1) scaleY(1) rotate(0deg);
  border: solid 2px rgba(0, 118, 190, 0)
  overflow: hidden

  &.select
    z-index: 100
    cursor: all-scroll
    border-radius: 50px
    background: rgba(8, 126, 198, .2)
    border: dashed 2px rgba(0, 118, 190, .70)

#main-face
  display: flex
  align-items center
  justify-content center
  position: relative
  line-height: 0
  display: table
  &>i
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%

  #rangers
    background-image: linear-gradient(to top, rgba(255,255,255,0), rgba(255,255,255,0.4), rgba(255,255,255,0))
    position: absolute
    top: 50%
    left: 0
    transform: translate(-50%, -50%)
    display: none
    z-index: 100

    &.select
      display: table

    p
      display: inline-flex
      flex-direction: column
      align-items: center

      .fas
        width: 25px
        height: 25px
        display: flex
        font-size: 12px
        color: white
        border-radius: 50%
        align-items: center
        justify-content: center
        background: #7da3c1
        border: solid 2px #52637b
        cursor pointer
        margin: 10px 5px

      input[type=range][orient=vertical]
        width: 8px
        height: 175px
        padding: 0 5px

  &>img
    max-height: 100vh
    max-width: 100vw
    height: auto
    width: auto
    display: table
    margin: 0 auto

  #botoes
    position: absolute
    top: 50%
    right: 0
    transform: translate(0, -50%)
    display: flex
    flex-direction: column
    z-index: 100

    button
      display: flex
      align-items: center
      justify-content: center
      width: 50px
      height: 50px
      margin: 10px 0
      background: rgba(255,255,255,.5)
      border-radius: 50%
      transition: .5s
      cursor: pointer

      &:hover
        transform: scale(1.2)
        background: rgba(255,255,255,.8)


      img
        width: auto
        height: auto
        max-width: 80%
        max-height: 80%
